<div class="container">
  <h1>New job posting</h1>
  <% unless current_user.admin? %>
    <p class="alert-red">You do not have permission to create job postings.</p>
  <% end %>

  <%= render "form", job_posting: @job_posting %>

  <br>

  <div>
    <%= link_to "Back to job postings", job_postings_path %>
  </div>

</div>
